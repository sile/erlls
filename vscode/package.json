{
  "name": "erlls",
  "displayName": "ErlLS",
  "publisher": "sile",
  "license": "MIT",
  "description": "Language Server for Erlang",
  "version": "0.0.18",
  "bugs": {
    "url": "https://github.com/sile/erlls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sile/erlls"
  },
  "homepage": "https://github.com/sile/erlls/blob/main/README.md",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "browser": "./dist/web/extension.js",
  "activationEvents": [
    "onLanguage:erlang"
  ],
  "contributes": {
    "languages": [
      {
        "id": "erlang",
        "aliases": [
          "Erlang"
        ],
        "extensions": [
          ".erl",
          ".hrl",
          ".app.src"
        ],
        "filenames": [
          "rebar.config"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "ErlLS",
      "properties": {
        "erlls.erlLibs": {
          "type": "string",
          "default": "_checkouts:_build/default/lib",
          "description": "Erlang library directories, separated by ':'"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package-web",
    "compile-web": "cargo build --release -p erlls_wasm --target wasm32-unknown-unknown && webpack",
    "package-web": "webpack --mode production --devtool hidden-source-map"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@types/webpack-env": "^1.18.1",
    "process": "^0.11.10"
  }
}
