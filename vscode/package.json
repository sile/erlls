{
  "name": "erlls",
  "displayName": "ErlLS",
  "publisher": "sile",
  "license": "MIT",
  "description": "Language Server for Erlang",
  "version": "0.0.13",
  "bugs": {
    "url": "https://github.com/sile/erlls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sile/erlls"
  },
  "homepage": "https://github.com/sile/erlls/blob/main/README.md",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:erlang"
  ],
  "contributes": {
    "languages": [
      {
        "id": "erlang",
        "aliases": [
          "Erlang"
        ],
        "extensions": [
          ".erl",
          ".hrl"
        ],
        "filenames": [
          "rebar.config"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "ErlLS",
      "properties": {
        "erlls.enableCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable LSP completion"
        }
      }
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "cargo build --release -p erlls_wasm --target wasm32-unknown-unknown && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  }
}
